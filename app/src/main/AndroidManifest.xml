<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.attendnace2.app" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconoweb"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
                android:name="com.example.attendnace2.app.PantallaInicio"
                android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name="com.example.attendnace2.app.ActividadPrincipal"
                android:label="Control asistencias" />
        <activity
                android:name="com.example.attendnace2.app.AcercaDe"
                android:label="Acerca de" />
        <activity
                android:name="com.example.attendnace2.app.MenuAsignatura"
                android:label="Menú eventos" />
        <activity
                android:name="com.example.attendnace2.app.ListaAlumnos"
                android:label="Asistentes" />
        <activity
                android:name="com.example.attendnace2.app.MarcadoAsistencia"
                android:label="Sesión" />
        <activity
                android:name="com.example.attendnace2.app.ListaAsignaturas"
                android:label="Ver eventos" />
        <activity
                android:name="com.example.attendnace2.app.IntroAsignaturas"
                android:label="Nuevo evento" />
        <activity
                android:name="com.example.attendnace2.app.capturaImagen"
                android:label="Dar de alta" />
    </application>

</manifest>
